$autoload = __DIR__ . '/../vendor/autoload.php';

if (!is_file($autoload)) {
    exit('Please run `composer install` First.');
}

include $autoload;

include_once __DIR__ . '/../etc/define.php';

$console = new Windwalker\Console\Application;

define('WINDWALKER_DEBUG', $console->get('system.debug'));

$console->execute();
